QCheckBox {
    color: var(--text);
    font-size: var(--font_size_medium);
    spacing: var(--spacing_xxlarge);
    padding: var(--padding_small);
}
QCheckBox::indicator {
    width: var(--indicator_size_medium);
    height: var(--indicator_size_medium);
    border-radius: var(--border_radius_small);
}
QCheckBox::indicator:unchecked {
    border: 2px solid var(--primary);
    background-color: var(--tertiary);
}
QCheckBox::indicator:unchecked:hover {
    border: 2px solid var(--secondary);
    background-color: var(--quaternary);
}
QCheckBox::indicator:checked {
    border: 2px solid var(--accent);
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 var(--gradient_stop_1), stop:1 var(--accent));
    image: url(data:image/svg+xml;base64,);
}
QCheckBox::indicator:checked:hover {
    border: 2px solid var(--gradient_stop_1);
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 var(--gradient_stop_2), stop:1 var(--gradient_stop_1));
}
QCheckBox:disabled {
    color: var(--quinary);
}
QCheckBox::indicator:disabled {
    border: 2px solid var(--senary);
    background-color: var(--quaternary);
}