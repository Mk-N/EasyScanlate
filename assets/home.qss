QMainWindow, QWidget {
    background-color: var(--nonary);
    color: var(--text);
}
QPushButton {
    background-color: var(--denary);
    color: var(--text);
    border-radius: var(--border_radius_medium);
    padding: var(--padding_large) var(--padding_xxlarge);
    border: none;
    font-size: var(--font_size_small);
}
QPushButton:hover {
    background-color: var(--undenary);
}
QScrollArea {
    background-color: transparent;
    border: none;
}
QScrollBar:vertical {
    background: var(--nonary);
    width: var(--scrollbar_width);
    margin: 0px;
}
QScrollBar::handle:vertical {
    background: var(--senary);
    min-height: var(--scrollbar_handle_min_height);
    border-radius: var(--border_radius_small);
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}